<div class="top-row pl-4 navbar navbar-dark" style="background-image: linear-gradient(50deg, #51c18d 0, #4fc08d 50%, #4dbf8d 100%); " >
    <a class="navbar-brand" href=""> <strong class="text-center"><h3 class="text-light">Library <span class="text-primary">Space</span> </h3></strong></a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass"  @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link btn  text-light border-light" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link btn  text-light border-light" href="nosotros">
                <span class="oi oi-plus" aria-hidden="true"></span> Nosotros
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link btn  text-light border-light" href="libros">
                <span class="oi oi-book" aria-hidden="true"></span> Libros
            </NavLink>
        </li>
        <AuthorizeView Roles="admin">

            <li class="nav-item px-3">
                <NavLink class="nav-link btn  text-light border-light" href="admin">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Administrador
                </NavLink>
            </li>
        </AuthorizeView>
        <li class="nav-item px-3">
            <NavLink class="nav-link btn  text-light border-light" href="autores">
                <span class="oi oi-people" aria-hidden="true"></span> Autores
            </NavLink>
        </li>
        
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
